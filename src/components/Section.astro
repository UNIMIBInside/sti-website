---
type Prop = {
  title?: string;
  className?: string;
};
const { title, className } = Astro.props;
---

<section class:list={[" w-full mt-5 px-4", className]}>
  <div class="mx-auto max-w-6xl">
    {
      title && (
        <div>
          <h2 class="text-2xl font-semibold text-foreground"> {title} </h2>
        </div>
      )
    }

    <slot />
  </div>
</section>
