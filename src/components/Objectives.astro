---
type Props = {
  icon?: string;
  title: string;
  text: string;
  bgColor: string;
};

const { icon, title, text, bgColor } = Astro.props;
---

<div
  class="w-96 margin bg-cardBackground rounded-lg px-8 py-5 overflow-hidden inline-block"
>
  <div class="flex items-center mt-2 mb-2">
    <div class:list={["rounded-full p-2", bgColor]}>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="36"
        height="36"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-goal"
        ><path d="M12 13V2l8 4-8 4"></path><path
          d="M20.561 10.222a9 9 0 1 1-12.55-5.29"></path><path
          d="M8.002 9.997a5 5 0 1 0 8.9 2.02"></path></svg
      >
    </div>
    <h5
      class="ml-3 text-2xl font-semibold tracking-tight text-iconBackground-500"
    >
      {title}
    </h5>
  </div>

  <p class="mb-3 font-normal text-gray-400">{text}</p>
</div>

<style>
  .margin + .margin {
    margin-left: 1.5rem;
  }
</style>
