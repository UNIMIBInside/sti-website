---
type Props = {
  /**
   * The title of the link.
   */
  title: string;
  /**
   * The URL of the link.
   */
  href: string;
};

const { title, href } = Astro.props;
let base = import.meta.env.BASE_URL;

let slug = Astro.url.pathname.replace(/\/$/, "");

const destination = `${base}${href === "/" ? "" : "/" + href}`;
console.log({ base, slug, destination });
---

<li>
  <a
    href={destination}
    class:list={[
      "block py-2 px-3 rounded md:bg-transparent md:p-0",
      slug === destination ? "text-purple-500" : "",
      slug,
      destination,
    ]}
    aria-current="page">{title}</a
  >
</li>
