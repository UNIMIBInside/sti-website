---
type Props = {
  image: string;
  name: string;
  profession: string;
  description: string;
};

const { image, name, profession, description } = Astro.props;
---

<div class="mt-10">
  <div class="flex">
    <img
      src={image}
      class="rounded-full mr-4 w-20 h-20 shrink-0 object-cover"
    />

    <div>
      <div class="text-2xl font-semibold uppercase text-purple-50">
        {name}
      </div>
      <div class="text-sm leading-none text-gray-500 mb-4">
        {profession}
      </div>
      <div class="text-base md:text-base lg:text-base">
        {description}
      </div>
    </div>
  </div>
</div>
