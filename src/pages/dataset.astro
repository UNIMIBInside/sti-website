---
import Layout from "@/layouts/Layout.astro";
import Section from "@components/Section.astro";
import DatasetGraph from "@components/DatasetGraph.astro";
import StiTable from "@components/sti-table";

import statistics from "@/assets/statistics.json";
const { approaches } = statistics;

import data from "@/assets/sti-survey.json";
---

<Layout title="Dataset">
  <main class="px-4">
    <Section>
      <div class="flex flex-col">
      <h1 class="py-4 text-4xl mt-8 font-bold bg-gradient-to-r from-[#9E0974] to-[#6665E9] inline-block text-transparent bg-clip-text">Dataset</h1> 
      <div
        class="bg-cardBackground p-10 pl-2 pb-0 rounded-lg inline-block max-h-[800px] overflow-y-auto mt-5"
      >
        <DatasetGraph data={approaches} />
      </div>
    </div>
    </Section>
    <Section title="Dataset details">
      <StiTable data={data} />
    </Section>
  </main>
</Layout>
