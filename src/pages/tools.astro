---
import Layout from "@/layouts/Layout.astro";
import Section from "@components/Section.astro";
---

<Layout title="">
    <main>
        <Section>
            <h2
        class="text-3xl font-semibold bg-gradient-to-r from-[#9E0974] to-[#6665E9] inline-block text-transparent bg-clip-text mt-10"
      >Tools</h2> 
      <p class="mb-6 mt-4 font-light lg:mb-8 md:text-lg lg:text-xl text-gray-400">In this page you will find the tools</p>
               <div class="inline-block rounded-lg overflow-x-auto max-w-full">
          <table class="text-sm text-left rtl:text-right text-tableText">
            <thead class="text-xs text-tableText uppercase bg-tableTop">
              <tr>
                <th scope="col" class="p-3 min-w-40"> Functionalities </th>
                <th scope="col" class="p-3 min-w-24 [writing-mode:vertical-rl] rotate-180 items-center"> Karma </th>
                <th scope="col" class="p-3 min-w-24 [writing-mode:vertical-rl] rotate-180 items-center"> TableMminer+ </th>
                <th scope="col" class="p-3 min-w-24 [writing-mode:vertical-rl] rotate-180 items-center"> Magic </th>
                <th scope="col" class="p-3 min-w-24 [writing-mode:vertical-rl] rotate-180 items-center"> MTab </th>
                <th scope="col" class="p-3 min-w-24 [writing-mode:vertical-rl] rotate-180 items-center"> MantisTable </th>
                <th scope="col" class="p-3 min-w-24 [writing-mode:vertical-rl] rotate-180 items-center"> STAN </th>
                <th scope="col" class="p-3 min-w-24 [writing-mode:vertical-rl] rotate-180 items-center"> OpenRefine </th>
                <th scope="col" class="p-3 min-w-24 [writing-mode:vertical-rl] rotate-180 items-center"> Trifacta </th>
                <th scope="col" class="p-3 min-w-24 [writing-mode:vertical-rl] rotate-180 items-center"> Odalic </th>
                <th scope="col" class="p-3 min-w-24 [writing-mode:vertical-rl] rotate-180 items-center"> DataGraft </th>
                <th scope="col" class="p-3 min-w-24 [writing-mode:vertical-rl] rotate-180 items-center"> Dagobah </th>
                <th scope="col" class="p-3 min-w-24 [writing-mode:vertical-rl] rotate-180 items-center"> SemTUI </th>
              </tr>
            </thead>

            <tbody class="text-foreground">
              <tr class="even:bg-tableBottom odd:bg-tableBottom/70">
                <th scope="row" class="p-3 min-w-40 font-medium whitespace-nowrap"
                  >Semtab2019 R4</th
                >
                <td class="p-3 min-w-24"> 0.983 </td>
                <td class="p-3 min-w-24"> - </td>
                <td class="p-3 min-w-24"> 0.832 </td>
              </tr>
      
              <tr class="even:bg-tableBottom odd:bg-tableBottom/70">
                <th scope="row" class="p-3 min-w-40 font-medium whitespace-nowrap"
                  >Semtab2020 R4</th
                >
                <td class="p-3 min-w-24"> 0.907 </td>
                <td class="p-3 min-w-24"> 0.993 </td>
                <td class="p-3 min-w-24"> 0.997 </td>
              </tr>
      
              <tr class="even:bg-tableBottom odd:bg-tableBottom/70">
                <th scope="row" class="p-3 min-w-40 font-medium whitespace-nowrap"
                  >Semtab2020 2T</th
                >
                <td class="p-3 min-w-24"> 0.907 </td>
                <td class="p-3 min-w-24"> 0.728 </td>
                <td class="p-3 min-w-24"> - </td>
              </tr>
              <tr class="even:bg-tableBottom odd:bg-tableBottom/70">
                <th scope="row" class="p-3 min-w-40 font-medium whitespace-nowrap"
                  >Semtab2021 R3</th
                >
                <td class="p-3 min-w-24"> 0.968 </td>
                <td class="p-3 min-w-24"> 0.984 </td>
                <td class="p-3 min-w-24"> 0.993 </td>
              </tr>
              <tr class="even:bg-tableBottom odd:bg-tableBottom/70">
                <th scope="row" class="p-3 min-w-40 font-medium whitespace-nowrap"
                  >MammoTab 22</th
                >
                <td class="p-3 min-w-24"> 0.853 </td>
                <td class="p-3 min-w-24"> 0.659 </td>
                <td class="p-3 min-w-24"> - </td>
              </tr>
            </tbody>
          </table>
        </div>      
        </Section>
    </main>

